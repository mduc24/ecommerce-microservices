# Application
APP_NAME=order-service
APP_ENV=development
DEBUG=True
API_VERSION=v1

# Database (async PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/orders_db

# Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=True
DB_POOL_RECYCLE=3600

# Product Service Client
PRODUCT_SERVICE_URL=http://product-service:8001
PRODUCT_SERVICE_TIMEOUT=5

# AWS / LocalStack (development)
AWS_ENDPOINT_URL=http://localstack:4566  # Remove for production AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
SNS_TOPIC_NAME=order-events

# Server
HOST=0.0.0.0
PORT=8002

# Application
APP_NAME=product-service
APP_ENV=development
DEBUG=True
API_VERSION=v1

# Database (async PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/products_db

# Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=True
DB_POOL_RECYCLE=3600

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Server
HOST=0.0.0.0
PORT=8001

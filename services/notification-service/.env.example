# Application
APP_NAME=notification-service
APP_ENV=development
DEBUG=True
API_VERSION=v1

# Database (async PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/notifications_db

# Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=True
DB_POOL_RECYCLE=3600

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123
RABBITMQ_EXCHANGE=ecommerce_events
RABBITMQ_QUEUE=notification_queue

# SMTP (MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=noreply@ecommerce.com

# Server
HOST=0.0.0.0
PORT=8004
